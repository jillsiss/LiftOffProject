@model LiftOffProject.ViewModels.AddQuestionViewModel

<h1>Add Questions, Homie</h1>



<form asp-controller="Questions" asp-action="Add" method="post" id="questionform" />
    <div class="form-group">
        <label asp-for="Query"></label>
        <input asp-for="Query" />
        <span asp-validation-for="Query"></span>
    </div>
    <div class="form-group">
        <label asp-for="Answers"></label>
        <input asp-for="Answers" />
        <span asp-validation-for="Answers"></span>
    </div>

    <button id="addQuestion">Add Question</button>  

<script>
    document.addEventListener("click", function(){
    document.getElementById("addQuestion").innerHTML(getElementById("questionform"))
    })
</script>


    <input type="submit" value="Finish" />