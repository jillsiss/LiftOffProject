@model LiftOffProject.ViewModels.QuizViewModel

<h1>@Model.Title by @Model.Author</h1>

<form method="post" asp-controller="Quizzes" asp-action="Edit">
    <table class="table">

        <tr>
            <th>ID</th>
            <th>Quiz Name</th>
            <th>Author</th>
            <th>Published On</th>
            <th># Questions</th>
        </tr>

            <tr>
            <td name="quizId" value="@Model.QuizId">@Model.QuizId</td>
                <td>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="@Model.Title" type="text" value="@Model.Title" />
                    </div>
                </td>
                <td>
                    <div class="form-group">   
                        <label asp-for="Author"></label>
                        <input asp-for="@Model.Author" type="text" value="@Model.Author" />
                    </div>
                </td>
                <td>@Model.Published"</td>
    @*            <td>@Model.Questions.Count</td>
                <td>@Model.TotalPoints</td>*@
            </tr>


    </table>
    <input type="hidden" value="@Model.QuizId" name="QuizId" />
    <input type="submit" value="Update" />
</form>
